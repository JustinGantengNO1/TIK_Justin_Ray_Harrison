 //nested if 
 //percabangan bersarang
 //if dalam if
 
 #include <iostream>
 using namespace std;
 int main()
 {
    int nilai;
    if ( nilai % 2 == 0 ) {
        cout<<"Bilangan Genap";
        if (  nilai <10 ) {
            cout<<"Bilangan Genap Kurang Dari 10";
        }
        else {
            cout<<"Bilangan Genap Lebih Dari 10";
        }
    }
    else {
        cout<<"Bilangan Ganjil";
        if ( nilai <10 ) {
            cout<<"Bilangan Ganjil Kurang Dari 10";
        }
        else {
            cout<<"Bilangang Ganjil Lebih Dari 10";
        }
    }
    return 0;
    
 }
