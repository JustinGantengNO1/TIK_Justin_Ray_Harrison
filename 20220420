#include <iostream>
using namespace std;
int main()
{
   
  
   int nilai1;
   cout<<"Masukkan Nilai Tugas = ";cin>>nilai1;

   if ( nilai1 >100 ){
       cout<<"tidak boleh lebih dari 100";
       return 0;
   }
   int nilai2;
   cout<<"Masukkan Nilai UTS = ";cin>>nilai2;
   
   if ( nilai2 >100 ){
       cout<<"tidak boleh lebih dari 100";
       return 0;
   }
   int nilai3;
   cout<<"Masukkan Nilai UAS = ";cin>>nilai3;
   
   if ( nilai3 >100 ){
       cout<<"tidak boleh lebih dari 100";
       return 0;
   }
   cout<< ( nilai1*0.3) + ( nilai2*0.3) + (nilai3*0.4);
   
}
